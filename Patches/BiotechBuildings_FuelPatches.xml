<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Conditional patches for Biotech DLC buildings -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ludeon.RimWorld.Biotech</li>
    </mods>
    <match>
      <Operation Class="PatchOperationSequence">
        <operations>

          <!-- Blood Torch: Add RimWood Firewood only (no charcoal for decorative torches) -->
          <li Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="BloodTorch"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
            <value>
              <li>RimWood_Firewood</li>
            </value>
          </li>

        </operations>
      </Operation>
    </match>
  </Operation>

</Patch>
