<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Conditional patches for Biotech DLC buildings -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ludeon.RimWorld.Biotech</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- Blood Torch: Add RimWood Firewood category and showFilter -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="BloodTorch"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter</xpath>
          <value>
            <categories>
              <li>RimWood_Firewood</li>
            </categories>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="BloodTorch"]/comps/li[@Class="CompProperties_Refuelable"]</xpath>
          <value>
            <showFilter>true</showFilter>
          </value>
        </li>
      </operations>
    </match>
  </Operation>

</Patch>
