<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Conditional patches for Ideology DLC buildings -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ludeon.RimWorld.Ideology</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>

        <!-- Brazier: Add RimWood Firewood category, fuel filter comp, and soot emitter comp -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Brazier"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter</xpath>
          <value>
            <categories>
              <li>RimWood_Firewood</li>
            </categories>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Brazier"]/comps</xpath>
          <value>
            <li Class="RimWood.CompProperties_FuelFilter" />
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Brazier"]/comps</xpath>
          <value>
            <li Class="RimWood.CompProperties_SootEmitter" />
          </value>
        </li>

        <!-- Darktorch: Add RimWood Firewood category, fuel filter comp, and soot emitter comp -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Darktorch"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter</xpath>
          <value>
            <categories>
              <li>RimWood_Firewood</li>
            </categories>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Darktorch"]/comps</xpath>
          <value>
            <li Class="RimWood.CompProperties_FuelFilter" />
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="Darktorch"]/comps</xpath>
          <value>
            <li Class="RimWood.CompProperties_SootEmitter" />
          </value>
        </li>

        <!-- Darklight Brazier: Add RimWood Firewood category, fuel filter comp, and soot emitter comp -->
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DarklightBrazier"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter</xpath>
          <value>
            <categories>
              <li>RimWood_Firewood</li>
            </categories>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DarklightBrazier"]/comps</xpath>
          <value>
            <li Class="RimWood.CompProperties_FuelFilter" />
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DarklightBrazier"]/comps</xpath>
          <value>
            <li Class="RimWood.CompProperties_SootEmitter" />
          </value>
        </li>

      </operations>
    </match>
  </Operation>

</Patch>
