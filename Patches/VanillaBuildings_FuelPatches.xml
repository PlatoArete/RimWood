<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <!-- Campfire: Add RimWood Firewood and Charcoal -->
  <Operation Class="PatchOperationSequence">
    <operations>
      <!-- Add Firewood category -->
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Campfire"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Firewood</li>
        </value>
      </li>
      <!-- Add Charcoal category -->
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="Campfire"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Charcoal</li>
        </value>
      </li>
    </operations>
  </Operation>

  <!-- Fueled Smithy: Add RimWood Firewood and Charcoal -->
  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="FueledSmithy"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Firewood</li>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="FueledSmithy"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Charcoal</li>
        </value>
      </li>
    </operations>
  </Operation>

  <!-- Fueled Stove: Add RimWood Firewood and Charcoal -->
  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="FueledStove"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Firewood</li>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="FueledStove"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Charcoal</li>
        </value>
      </li>
    </operations>
  </Operation>

  <!-- Torch Lamp: Add RimWood Firewood only (no charcoal) -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="TorchLamp"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
    <value>
      <li>RimWood_Firewood</li>
    </value>
  </Operation>

  <!-- Standing Lamp (Wall Torch): Add RimWood Firewood only (no charcoal) -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="StandingLamp_Red"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
    <value>
      <li>RimWood_Firewood</li>
    </value>
  </Operation>

  <!-- Wood-Fired Generator: Add RimWood Firewood and Charcoal -->
  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="WoodFiredGenerator"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Firewood</li>
        </value>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="WoodFiredGenerator"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter/categories</xpath>
        <value>
          <li>RimWood_Charcoal</li>
        </value>
      </li>
    </operations>
  </Operation>

  <!-- Passive Cooler: Replace WoodLog with Wood Fibre Pads -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="PassiveCooler"]/comps/li[@Class="CompProperties_Refuelable"]/fuelFilter</xpath>
    <value>
      <fuelFilter>
        <categories>
          <li>RimWood_FibrePads</li>
        </categories>
      </fuelFilter>
    </value>
  </Operation>

</Patch>
